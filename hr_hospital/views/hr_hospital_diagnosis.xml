<odoo>
        <record id="view_hh_diagnosis_form" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.form</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                <form string="Diagnosis">
                    <sheet>
                        <group>
                            <field name="visit_id"/>
                            <field name="disease"/>
                            <field name="description"/>
                            <field name="approved"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hh_diagnosis_tree" model="ir.ui.view">
            <field name="name">hr.hospital.diagnosis.tree</field>
            <field name="model">hr.hospital.diagnosis</field>
            <field name="arch" type="xml">
                    <tree string="Diagnosis">
                        <field name="visit_id"/>
                        <field name="disease"/>
                        <field name="approved"/>
                    </tree>
            </field>
        </record>

        <record id="action_hh_diagnosis_window" model="ir.actions.act_window">
            <field name="name">Diagnosis</field>
            <field name="res_model">hr.hospital.diagnosis</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_hh_diagnosis_tree"/>
        </record>

        <menuitem id="menu_hh_diagnosis" name="Diagnosis" parent="hr_hospital_main_menu" action="action_hh_diagnosis_window" sequence="400" />
    </odoo>
