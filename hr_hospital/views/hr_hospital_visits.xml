<odoo>

    <record id="hr_hospital_visits_tree" model="ir.ui.view">
        <field name="name">hr.hospital.visits.tree ()</field>
        <field name="model">hr.hospital.visits</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="visit_date" widget="datetime"/>
                <field name="status"/>
            </tree>
        </field>
    </record>


    <record id="hr_hospital_visits_form" model="ir.ui.view">
        <field name="name">hr.hospital.visits.form ()</field>
        <field name="model">hr.hospital.visits</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" modifiers="{'readonly': [('status', 'in', ['completed', 'canceled'])]}"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" modifiers="{'readonly': [('status', '=', 'canceled')]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" modifiers="{'readonly': [('status', '=', 'completed')]}"/>
                            <field name="patient_id" modifiers="{'readonly': [('status', '=', 'completed')]}"/>
                            <field name="doctor_id" modifiers="{'readonly': [('status', '=', 'completed')]}"/>
                            <field name="visit_date" widget="datetime" modifiers="{'readonly': [('status', '=', 'completed')]}"/>
                            <field name="status" widget="statusbar"/>
                        </group>
                        <group>
                            <field name="scheduled_date" modifiers="{'readonly': [('status', '=', 'completed')]}"/>
                            <field name="actual_date" modifiers="{'readonly': [('status', '=', 'completed')]}"/>
                        </group>
                        <group>
                            <field name="diagnosis_ids">
                                <tree>
                                    <field name="disease"/>
                                    <field name="description"/>
                                    <field name="approved"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="disease"/>
                                        <field name="description"/>
                                        <field name="approved"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hospital_visits_window" model="ir.actions.act_window">
        <field name="name">Visits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.visits</field>
        <field name="view_mode">tree,form</field>
</record>
    <menuitem id="hr_hospital_menu_visits" action="action_hr_hospital_visits_window" parent="hr_hospital_main_menu" name="Visits" sequence="400"/>
</odoo>