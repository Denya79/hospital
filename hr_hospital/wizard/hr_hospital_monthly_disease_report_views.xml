<odoo>
    <record id = "hr_hospital_monthly_disease_report_form" model="ir.ui.view">
        <field name="name">hr.hospital.monthly.disease.report.form</field>
        <field name="model">hr.hospital.monthly.disease.report</field>
        <field name="arch" type="xml">
            <form string="Monthly Disease Report">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <group>
                    <field name="doctor_ids" widget="many2many_tags"/>
                    <field name="disease_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_generate_report" type="object" string="GenerateReport" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_monthly_disease_report" model="ir.actions.act_window">
        <field name="name">Monthly Disease Report</field>
        <field name="res_model">hr.hospital.monthly.disease.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>